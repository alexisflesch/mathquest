{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npx prisma generate && cp -r src/db/generated dist/backend/src/db/",
    "start:memory-limited": "node --max-old-space-size=512 --max-semi-space-size=128 -r dotenv/config dist/backend/src/server.js",
    "start:ultra-limited": "node --max-old-space-size=128 --max-semi-space-size=32 -r dotenv/config dist/backend/src/server.js",
    "dev": "nodemon src/server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:init-db": "node tests/support/initTestDb.js",
    "test:clean": "npm run test:init-db && jest",
    "type-check": "tsc --project tsconfig.json --noEmit --pretty",
    "dev:memory": "nodemon --max-old-space-size=256 src/server.ts",
    "monitor:memory": "node -e \"setInterval(() => { const mem = process.memoryUsage(); console.log(new Date().toISOString(), 'Memory:', Math.round(mem.heapUsed / 1024 / 1024) + 'MB used,', Math.round(mem.heapTotal / 1024 / 1024) + 'MB total,', Math.round(mem.external / 1024 / 1024) + 'MB external'); }, 30000);\""
  },
  "_moduleAliases": {
    "@": "dist/backend/src",
    "@shared": "dist/shared"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@prisma/client": "^6.7.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.18",
    "@types/socket.io": "^3.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.7.0",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "winston": "^3.17.0",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "redis": "^4.6.7",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.2",
    "ts-to-zod": "^3.15.0",
    "tsconfig-paths": "^4.2.0"
  }
}