{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@shared/*": [
                "../shared/*"
            ]
        },
        "moduleResolution": "node",
        "downlevelIteration": true,
        "jsx": "react-jsx" // Enable JSX support for TSX files in shared examples
    },
    "include": [
        "src/**/*",
        "../shared/**/*.ts" // Only include shared TypeScript files, exclude .tsx examples
    ],
    "exclude": [
        "node_modules",
        "tests/**/*", // Exclude test files from production build
        "src/tests/**/*", // Exclude test files in src directory
        "../shared/types/examples" // Exclude shared TSX examples directory
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}