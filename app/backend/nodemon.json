{
    "watch": [
        "src",
        "../shared"
    ],
    "ext": "ts,js,json",
    "ignore": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "dist/**",
        "node_modules/**"
    ],
    "exec": "node --max-old-space-size=1024 --max-semi-space-size=256 node_modules/.bin/ts-node -r tsconfig-paths/register src/server.ts",
    "env": {
        "NODE_ENV": "development"
    },
    "delay": 1000
}