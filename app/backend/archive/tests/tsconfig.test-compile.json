{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "rootDir": "..",
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "jest",
            "node"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "../src/**/*",
        "./**/*"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}