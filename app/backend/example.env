# Database - Production
DATABASE_URL="postgresql://postgre:pwd@localhost:5432/mathquest"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secret (backend)
JWT_SECRET="your key"

# Admin password (for teacher registration)
ADMIN_PASSWORD=whatever

# Server port
PORT=3007

# Logging configuration
LOG_LEVEL=DEBUG

# Socket.IO Debug Logging
# Set to 'true' to enable verbose socket.onAny() logging (all events)
# WARNING: Very verbose, use only for debugging connection/event issues
# Default: false (off)
SOCKET_DEBUG_EVENTS=false

# Email Configuration (Brevo)
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Kutsum

# Domain configuration
APP_DOMAIN=app.kutsum.org
APP_NAME=Kutsum
FRONTEND_URL=https://app.kutsum.org

# Email verification settings
EMAIL_VERIFICATION_TOKEN_EXPIRY=24h
PASSWORD_RESET_TOKEN_EXPIRY=1h

# In production, you might want to set these to reduce log verbosity:
# LOG_LEVEL=ERROR