{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "outDir": "../dist/frontend",
        "rootDir": "..",
        "jsx": "preserve",
        "incremental": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@shared/*": [
                "../shared/*"
            ],
            "@logger": [
                "../shared/logger.ts"
            ],
            "@db": [
                "../backend-backup/db/index.ts"
            ],
            "@prisma/client": [
                "../shared/prisma-client"
            ]
        },
        "noEmit": true,
        "types": [
            "jest",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".next/types/**/*.ts",
        "../shared/types/**/*.ts",
        "../shared/logger.ts",
        "../backend-backup/db/index.ts",
        "next.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "../dist"
    ]
}